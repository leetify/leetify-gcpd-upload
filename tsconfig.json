{
	"compilerOptions": {
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": ["esnext", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext",

		"typeRoots": [
			"./node_modules/@types",
			"./node_modules/chrome-types"
		]
	},

	"include": [
		"./src/**/*",
		"./node_modules/chrome-types"
	]
}
